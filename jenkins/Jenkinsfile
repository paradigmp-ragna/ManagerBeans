pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the repository to build
                git branch: '*/main', url: 'https://github.com/your/repository.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Run Docker build
                script {
                    docker.build("your/repository:pr-${env.CHANGE_ID}")
                }
            }
        }
    }

    post {
        success {
            // Push the Docker image to a registry (optional)
            script {
                docker.withRegistry('https://registry.example.com', 'docker-credentials-id') {
                    docker.image("your/repository:pr-${env.CHANGE_ID}").push()
                }
            }
        }
    }
}
